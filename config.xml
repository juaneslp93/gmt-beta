<?xml version='1.0' encoding='utf-8'?>
<widget id="com.millenium.gmt" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>gmt</name>
    <description>
        Marco contenedor GMT
    </description>
    <author href="http://softwaremillenium.com/" email="gerencia_desarrollos@softwaremillenium.com">
        GlobalMiningtrust
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <!-- preferencias -->
        <preference name="android-minSdkVersion" value="14" />
        <allow-intent href="market:*" />
        <!-- iconos -->
        <icon src="platforms/browser/res/icon/android/ldpi.png" density="ldpi" />
        <icon src="platforms/browser/res/icon/android/mdpi.png" density="mdpi" />
        <icon src="platforms/browser/res/icon/android/hdpi.png" density="hdpi" />
        <icon src="platforms/browser/res/icon/android/xhdpi.png" density="xhdpi" />
        <!-- pantalla inicial -->
        <!-- you can use any density that exists in the Android project -->
        <splash src="platforms/browser/res/icon/android/splash-land-hdpi.png" density="land-hdpi"/>
        <splash src="platforms/browser/res/icon/android/splash-land-ldpi.png" density="land-ldpi"/>
        <splash src="platforms/browser/res/icon/android/splash-land-mdpi.png" density="land-mdpi"/>
        <splash src="platforms/browser/res/icon/android/splash-land-xhdpi.png" density="land-xhdpi"/>
        <splash src="platforms/browser/res/icon/android/splash-port-hdpi.png" density="port-hdpi"/>
        <splash src="platforms/browser/res/icon/android/splash-port-ldpi.png" density="port-ldpi"/>
        <splash src="platforms/browser/res/icon/android/splash-port-mdpi.png" density="port-mdpi"/>
        <splash src="platforms/browser/res/icon/android/splash-port-xhdpi.png" density="port-xhdpi"/>
    </platform>
    <!-- <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <preference name="BackupWebStorage" value="none" />
    </platform> -->
    <preference name="DisallowOverscroll" value="true" />
    <plugin name="cordova-plugin-whitelist" spec="~1.2.0" />
    <plugin name="cordova-plugin-console" spec="~1.0.1" />
    <plugin name="cordova-plugin-statusbar" spec="~1.0.1" />
</widget>
